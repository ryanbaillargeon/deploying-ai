# YouTube History API
YOUTUBE_API_BASE_URL=http://localhost:8000
YOUTUBE_API_VERSION=v1

# Model Configuration
USE_LOCAL_LLM=false  # Set to 'true' to use LM Studio
OPENAI_API_KEY=your_key_here
OPENAI_MODEL=gpt-4o

# Purpose-Specific Model Configuration
# These allow you to use different models for different components
# If not set, falls back to OPENAI_MODEL or LOCAL_MODEL_NAME
# 
# MIXING LOCAL AND ONLINE MODELS:
# - Set model name to a known OpenAI model (gpt-4o, gpt-4o-mini, etc.) to use online
# - Set model name to a local model name to use local (if USE_LOCAL_LLM=true)
# - Or use purpose-specific flags: USE_LOCAL_CHAT, USE_LOCAL_EVALUATION, USE_LOCAL_ENHANCEMENT
CHAT_MODEL=  # Model for main chat conversations (optional)
EVALUATION_MODEL=  # Model for response quality evaluation (optional)
ENHANCEMENT_MODEL=  # Model for response enhancement (optional)

# Purpose-Specific Local/Online Override (optional)
# Set to 'true' to force local, 'false' to force online for that component
# If not set, auto-detects based on model name (known OpenAI models = online)
# USE_LOCAL_CHAT=
# USE_LOCAL_EVALUATION=
# USE_LOCAL_ENHANCEMENT=

# Local Model (LM Studio) Configuration
LM_STUDIO_BASE_URL=http://192.168.86.63:2086/v1
LOCAL_MODEL_NAME=local-model  # Model name in LM Studio

# Embeddings (for future phases)
EMBEDDING_MODEL=text-embedding-3-small

# ChromaDB
CHROMA_DB_PATH=./src/data/chroma_db
CHROMA_COLLECTION_NAME=youtube_history

